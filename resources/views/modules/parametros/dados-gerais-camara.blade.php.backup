                    }, index * 100); // 100ms entre cada campo
                }
            });
            
            console.log('‚úÖ Campos preenchidos automaticamente:', campos);
        }

        /**
         * Inicializa o sistema de preenchimento autom√°tico por CEP
         */
        function initCepAutofill() {
            const cepInput = document.getElementById('cep_input');
            const loadingDiv = document.getElementById('cep_loading');
            
            if (!cepInput) return;
            
            let searchTimeout;
            let lastSearchedCep = '';
            
            // Busca autom√°tica quando o usu√°rio digita
            cepInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                const rawValue = this.value;
                const cep = rawValue.replace(/\D/g, ''); // Remove caracteres n√£o num√©ricos
                
                // Limpar loading se n√£o tiver 8 d√≠gitos
                if (cep.length < 8) {
                    loadingDiv.classList.add('d-none');
                    return;
                }
                
                // Se tiver 8 d√≠gitos e for diferente da √∫ltima busca
                if (cep.length === 8 && cep !== lastSearchedCep) {
                    searchTimeout = setTimeout(() => {
                        lastSearchedCep = cep;
                        buscarEnderecoPorCep(cep);
                    }, 800); // Aguarda 800ms ap√≥s parar de digitar
                }
            });

            // Busca tamb√©m quando cola texto
            cepInput.addEventListener('paste', function() {
                setTimeout(() => {
                    const cep = this.value.replace(/\D/g, '');
                    if (cep.length === 8 && cep !== lastSearchedCep) {
                        lastSearchedCep = cep;
                        buscarEnderecoPorCep(cep);
                    }
                }, 100);
            });

            // Busca quando sai do campo (blur) se tiver 8 d√≠gitos
            cepInput.addEventListener('blur', function() {
                const cep = this.value.replace(/\D/g, '');
                if (cep.length === 8 && cep !== lastSearchedCep) {
                    lastSearchedCep = cep;
                    buscarEnderecoPorCep(cep);
                }
            });
        }
        
