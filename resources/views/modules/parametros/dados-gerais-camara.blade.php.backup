         */
        async function buscarEnderecoPorCep(cep) {
            const loadingDiv = document.getElementById('cep_loading');
            const cepInput = document.getElementById('cep_input');
            
            try {
                // Mostrar loading
                loadingDiv.classList.remove('d-none');
                cepInput.style.paddingRight = '2.5rem'; // Espa√ßo para o spinner
                
                console.log('üîç Buscando CEP via API interna:', cep);
                
                const response = await fetch(`/api/cep/${cep}`, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                        'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                    }
                });
                
                const result = await response.json();
                
                if (!result.success) {
                    throw new Error(result.message || 'CEP n√£o encontrado');
                }
                
                const data = result.data;
                
                // Preencher campos automaticamente
                preencherCamposEndereco(data);
                
                // Mostrar toast de sucesso discreto
                toastr.success(`Endere√ßo encontrado: ${data.localidade || 'N/A'} - ${data.uf || 'N/A'}`, '‚úÖ CEP Encontrado', {
                    timeOut: 3000,
                    positionClass: 'toast-top-right',
                    showMethod: 'slideDown',
                    hideMethod: 'slideUp'
                });
                
            } catch (error) {
                console.error('Erro na busca do CEP:', error);
                
                // Mostrar toast de erro discreto
                toastr.warning(`CEP ${cep} n√£o encontrado. Preencha manualmente.`, '‚ö†Ô∏è CEP n√£o encontrado', {
                    timeOut: 4000,
                    positionClass: 'toast-top-right',
                    showMethod: 'slideDown',
                    hideMethod: 'slideUp'
                });
            } finally {
                // Esconder loading
                loadingDiv.classList.add('d-none');
                cepInput.style.paddingRight = ''; // Remover espa√ßo extra
            }
        }
        
        /**
         * Preenche os campos de endere√ßo com os dados da API
         */
        function preencherCamposEndereco(data) {
            const campos = {
                endereco_input: data.logradouro || '',
                bairro_input: data.bairro || '',
                cidade_input: data.localidade || '',
                estado_select: data.uf || ''
