# =============================================================================
# MONITORING SYSTEM CONFIGURATION
# =============================================================================
# Add these settings to your .env file to configure the monitoring system

# Debug System (IMPORTANT: Only enable in development/staging)
MONITORING_DEBUG_ENABLED=false
MONITORING_DEBUG_QUERY_CAPTURE=true
MONITORING_DEBUG_MAX_QUERIES=1000
MONITORING_DEBUG_SESSION_TIMEOUT=600

# Security Settings
MONITORING_DEBUG_MASK_PII=true
MONITORING_DEBUG_TRUNCATE_SQL=4000
MONITORING_DEBUG_TRUNCATE_URL=512
MONITORING_DEBUG_MAX_BACKTRACE_FRAMES=6

# Performance Settings
MONITORING_DEBUG_SAMPLING_ENABLED=false
MONITORING_DEBUG_SAMPLING_RATE=0.1
MONITORING_DEBUG_MAX_DISPLAY_QUERIES=500

# Metrics Collection
MONITORING_METRICS_ENABLED=true
MONITORING_METRICS_HTTP_ENABLED=true
MONITORING_METRICS_TRACK_USER_AGENTS=false
MONITORING_METRICS_REDIS_QUEUE=metrics:http
MONITORING_METRICS_MAX_QUEUE_SIZE=10000
MONITORING_METRICS_REDIS_TTL=3600

# Health Checks
MONITORING_HEALTH_ENABLED=true
MONITORING_HEALTH_CHECK_DATABASE=true
MONITORING_HEALTH_CHECK_REDIS=true
MONITORING_HEALTH_CHECK_STORAGE=true

# Alerts (Optional - for production environments)
MONITORING_ALERTS_ENABLED=false
MONITORING_ALERT_ERROR_RATE_THRESHOLD=5
MONITORING_ALERT_RESPONSE_TIME_THRESHOLD=2000

# Data Retention
MONITORING_METRICS_RETENTION_DAYS=30
MONITORING_LOGS_RETENTION_DAYS=7
MONITORING_TRACES_RETENTION_HOURS=72

# Performance Monitoring
MONITORING_SLOW_QUERY_THRESHOLD=100
MONITORING_LOG_SLOW_REQUESTS=true
MONITORING_SLOW_REQUEST_THRESHOLD=1000

# =============================================================================
# QUICK START GUIDE
# =============================================================================
# 
# Development Setup:
# 1. Set MONITORING_DEBUG_ENABLED=true in your .env
# 2. Ensure user has 'monitoring.debug' permission
# 3. Visit /admin/monitoring/database to start debugging
# 
# Production Setup:
# 1. Keep MONITORING_DEBUG_ENABLED=false
# 2. Set MONITORING_METRICS_ENABLED=true
# 3. Configure alerts and retention policies
# 
# Security Notes:
# - Debug mode should NEVER be enabled in production
# - PII masking is enabled by default
# - SQL queries are truncated to prevent memory issues
# - Session timeouts prevent long-running debug sessions
# 
# =============================================================================